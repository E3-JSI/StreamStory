	<div id="modal-confirm" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">	
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h3 id="confirm-header" class="modal-title">Modal title</h3>
				</div>
				<div class="modal-body">
					<p id="confirm-content">One fine body&hellip;</p>
				</div>
				<div class="modal-footer">	
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
					<button id="btn-confirm-ok" type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		$(document).ready(function () {
			$('#modal-confirm').modal({ show: false });
			$('#btn-confirm-ok').click(function () {
				$('#modal-confirm').modal({ show: false });
			});
		});
		
		function promptConfirm(title, content, onConfirm) {
			var modal = $('#modal-confirm');
			var submitBtn = $('#btn-confirm-ok');
			
			modal.find('#confirm-header').html(title)
			modal.find('#confirm-content').html(content);
			
			submitBtn.off('click');
			submitBtn.click(onConfirm);
			
			modal.modal({ show: true });
		}
	</script>